<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_frame"
    android:orientation="vertical"
    tools:context=".logs.LinkFragment">

    <AutoCompleteTextView
        android:id="@+id/psearchtv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/boxfill_radius"
        android:drawableEnd="@drawable/addr"
        android:imeOptions="actionNext"
        android:paddingStart="7dp"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:paddingEnd="0dp"
        android:hint="@string/select_hotel"
        android:textColor="#000000"
        android:drawableRight="@drawable/addr"
        android:paddingLeft="7dp"
        android:paddingRight="0dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="Select Package"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/border">
        <Spinner
            android:id="@+id/packspi"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:prompt="@string/packages"/>
    </LinearLayout>




    <Button
        android:id="@+id/submitbtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"

        android:text="Submit"/>

</LinearLayout>