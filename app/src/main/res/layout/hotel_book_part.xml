<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">

        <TextView
            android:text="@string/name"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/GnameTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:textIsSelectable="true"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">

        <TextView
            android:text="@string/mobile"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/mobileTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:autoLink="phone"
            android:textColorLink="#000"
            android:textIsSelectable="true"
            android:background="@drawable/box_grey_bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">

        <TextView
            android:text="@string/email"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/emailTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:textIsSelectable="true"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">

        <TextView
            android:text="@string/room_type"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/RoomTypeTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">

        <TextView
            android:text="@string/check_in_date"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/CInTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/standard_check_in_time"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/StdCinTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:minHeight="40dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/check_out_date"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/COutTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:minHeight="40dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/no_of_rooms"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/NoRoomsTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">

        <TextView
            android:text="@string/no_of_guests"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/NoguestTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">

        <TextView
            android:text="@string/no_of_nights"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/NoNightsTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:minHeight="40dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/no_of_extra_beds"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/EbedTv"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:background="@drawable/box_grey_bottom"
            android:textSize="17sp"
            android:gravity="center"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">

        <TextView
            android:id="@+id/totpriceNameTv"
            android:text="@string/total_price"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/totPriceTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearid"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PaybrkNameTv"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/payment_breakup"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/box_grey_bottom"
            android:gravity="center"
            android:baselineAligned="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pricelayt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:text="@string/total_room_charges"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/priceTV"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ea4c4c"
                    android:gravity="end"
                    android:text="@string/price_includes_gst_if"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pricegstlayt"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/line_bottom_grey"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center"
                            android:text="@string/total_room_charges"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/totpricegstifTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textColor="#ea4c4c"
                            android:text="@string/price_includes_gst"
                            android:textSize="13sp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/totalchargeTV"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textColor="#000"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TcommLayt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/line_bottom_grey"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:text="@string/tripnetra_commision"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tripcomsnTV"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TgstLayt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/line_bottom_grey"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center"
                            android:text="@string/tripnetra_gst_18"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/igst_cgst_amp_sgst"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tripgstTV"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/HgstLayt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    android:minHeight="40dp"
                    android:background="@drawable/line_bottom_grey"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:text="@string/hotel_gst"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/hotgstTV"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/HCompLayt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    android:minHeight="40dp"
                    android:background="@drawable/line_bottom_grey"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:text="@string/total_amount"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/CompTotTV"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/HCompLayt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    android:minHeight="40dp"
                    android:background="@drawable/line_bottom_grey"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:text="@string/complimentay_rooms_charge"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/CompRChargeTV"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:minHeight="40dp"
                android:background="@drawable/line_bottom_grey"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:text="@string/tripnetra_payable_to_hotel"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/trippayblTV"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">

        <TextView
            android:id="@+id/suptxt"
            android:text="@string/supported_by"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/supportTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:gravity="center"
            android:textIsSelectable="true"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:minHeight="40dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/payTv"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/paymsgTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/box_grey_bottom"/>

    </LinearLayout>

</LinearLayout>